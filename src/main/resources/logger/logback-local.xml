<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- 프로퍼티 파일 -->
    <property resource="logger/logback.properties"/>
    <property resource="logger/logback-local.properties"/>
    
    
    <!-- 로그 파일 경로 : 프로퍼티 참조 -->
    <property name="LOG_PATH" value="${log.path}"/>
    <!-- 로그 파일 명 : 프로퍼티 참조 -->
    <property name="LOG_FILE_NAME" value="${log.file.name.app}"/>
    <!-- 에러 로그 파일 경로 : 프로퍼티 참조 -->
    <property name="ERR_LOG_FILE_NAME" value="${log.file.name.error}"/>
    <!-- 로그 파일 최대 용량 : 프로퍼티 참조 -->
    <!-- <property name="LOG_FILE_MAX_FILE_SIZE" value="${log.file.maxFileSize}"/> -->
    <!-- 로그 파일 최대 보관일 : 프로퍼티 참조 -->
    <property name="LOG_FILE_MAX_HISTORY" value="${log.file.maxHistory}"/>
    <!-- 로그 패턴(디자인) -->
    <property name="LOG_PATTERN" value="%green(%d{yyyy-MM-dd HH:mm:ss.SSS}) %magenta([%thread]) %highlight(%5level) %cyan(%logger) - %yellow(%msg%n) "/>
    
    
    <!-- log4jdbc 옵션 설정 -->
    <logger name="jdbc" level="OFF" appender-ref="FILE"/>
    <!-- connection open close 로깅 여부 -->
    <logger name="jdbc.connection" level="ERROR" appender-ref="FILE"/>
    <!-- SQL문만 로깅할지 여부 -->
    <logger name="jdbc.sqlonly" level="OFF" appender-ref="FILE"/>
    <!-- 쿼리문 수행에 걸린 시간 로깅 -->
    <logger name="jdbc.sqltiming" level="INFO" appender-ref="FILE"/>
    <!-- ResultSet외 모든 JDBC 호출 정보를 로깅할지 여부 -->
    <logger name="jdbc.audit" level="OFF" appender-ref="FILE"/>
    <!-- ResultSet 포함 모든 JDBC 호출 정보를 로깅 -->
    <logger name="jdbc.resultset" level="OFF" appender-ref="FILE"/>
    <!-- ResultSet 포함 모든 JDBC 호출 정보를 테이블 형태로 로깅 -->
    <logger name="jdbc.resultsettable" level="OFF" appender-ref="FILE"/>
        
        
    <!-- Server Log Config -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- 출력패턴 설정-->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    
    
    <!-- Log File : 로그 파일 확인이 필요할 경우 주석 해제 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE_NAME}.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>${LOG_FILE_MAX_HISTORY}</maxHistory>
        </rollingPolicy>
    </appender>
    

    <!-- Error Log File : 로그 파일 확인이 필요할 경우 주석 해제 -->
    <!-- <appender name="ERR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>error</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <file>${LOG_PATH}/${ERR_LOG_FILE_NAME}.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>${LOG_FILE_MAX_HISTORY}</maxHistory>
        </rollingPolicy>
    </appender> -->
    
    
    <!-- Root -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <!-- <appender-ref ref="ERR_FILE"/> -->
    </root>
</configuration>