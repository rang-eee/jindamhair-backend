<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- ✅ application.yml 값 주입 -->
    <springProperty name="LOG_PATH" source="logback.path" />
    <springProperty name="LOG_FILE_NAME" source="logback.file.name.app" defaultValue="application"/>
    <springProperty name="ERR_LOG_FILE_NAME" source="logback.file.name.error" defaultValue="error"/>
    <springProperty name="LOG_FILE_MAX_HISTORY" source="logback.file.maxHistory" defaultValue="30"/>
    
    <property name="LOG_PATTERN" value="%green(%d{yyyy-MM-dd HH:mm:ss.SSS}) %magenta([%thread]) %highlight(%5level) %cyan(%logger) - %yellow(%msg%n) "/>

    <!-- 색상 변환기 (콘솔 컬러) -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />

    <!-- 콘솔 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 파일 롤링 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE_NAME}.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>${LOG_FILE_MAX_HISTORY}</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- (선택) 에러 전용 파일 -->
